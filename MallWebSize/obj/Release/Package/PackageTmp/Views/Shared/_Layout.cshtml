@using MallDataBase.Entity;
@{
    List<MallDataBase.Entity.Directory> list = ViewBag.Category as List<MallDataBase.Entity.Directory>;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Css/index.css">
</head>
<body>
    <nav class="main-nav">
        <div class="main-nav">
            <div class="head-inner">
                <ul class="main-nav-link J_main_nav_link clearfix">
                    <li style="display: inline-block">
                        <a href="/Home/Index">首页</a>
                    </li>
                    @foreach (var item in list)
                    {
                        
                        <li style="display: inline-block">
                            <a href="@item.RelativeUrl">@item.DirectoryName</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
